<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<BorderPane style="-fx-background-color: #121212;" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="me.dawey.erettsegifx.controllers.CreateController" stylesheets="@../../styles/forms-style.css">
    <Pane>
        <VBox alignment="CENTER" spacing="10.0">
            <Label text="Vizsgazo hozzaadasa" textFill="white"/>

            <HBox spacing="10.0" alignment="CENTER">
                <Label text="Vizsgazo Nev: " textFill="white"/>
                <TextField fx:id="vizsgazoNameField"/>
            </HBox>
            <HBox spacing="10.0" alignment="CENTER">
                <Label text="Osztaly: " textFill="white"/>
                <TextField fx:id="vizsgazoClassNameField"/>
            </HBox>
            <Button text="Vizsgazo hozaadas" onAction="#addVizsgazo"/>

            <Label text="Vizsgatargy hozzaadasa" textFill="white"/>
            <HBox spacing="10.0" alignment="CENTER">
                <Label text="Vizsgatargy neve:" textFill="white"/>
                <TextField fx:id="vizsgatargyNameField"/>
            </HBox>
            <HBox spacing="10.0" alignment="CENTER">
                <Label text="Irmax:" textFill="white"/>
                <TextField fx:id="irmaxField"/>
            </HBox>
            <HBox spacing="10.0" alignment="CENTER">
                <Label text="Szomax:" textFill="white"/>
                <TextField fx:id="szomaxField"/>
            </HBox>
            <Button text="Vizsgatargy hozzaadas" onAction="#addVizsgatargy"/>

            <Label text="Vizsga hozzaadasa" textFill="white"/>
            <HBox spacing="10" alignment="CENTER">
                <Label text="Vizsgazo azonosito:" textFill="white"/>
                <TextField fx:id="vizsgaVizsgazoAzonositoField"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <Label text="Vizsgatargy azonosito:" textFill="white"/>
                <TextField fx:id="vizsgaVizsgatargyAzonositoField"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <Label text="Szobeli eredmeny:" textFill="white"/>
                <TextField fx:id="szobeliEredmenyField"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <Label text="Irasbeli eredmeny:" textFill="white"/>
                <TextField fx:id="irasbeliEredmenyField"/>
            </HBox>
            <Button text="Vizsga hozzaadas" onAction="#addVizsga"/>
        </VBox>

    </Pane>
</BorderPane>