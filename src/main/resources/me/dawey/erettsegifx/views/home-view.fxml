<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #ffffff;" stylesheets="@../styles/home-style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.dawey.erettsegifx.controllers.HomeController">

    <top>
        <GridPane fx:id="topGridPane" alignment="CENTER" style="-fx-background-color: black" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="325.0" minWidth="10.0" prefWidth="302.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="298.0" minWidth="10.0" prefWidth="298.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
                <ColumnConstraints hgrow="NEVER" minWidth="34.0" prefWidth="24.0" /> <!-- Column for minimize button -->
                <ColumnConstraints hgrow="NEVER" minWidth="34.0" prefWidth="24.0" /> <!-- Column for exit button -->
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: black" GridPane.columnIndex="0">
                    <ComboBox fx:id="actionComboBox" onAction="#handleComboBoxAction" promptText="Home" styleClass="dark-theme-combo-box">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="CRUD" />
                                <String fx:value="SOAP" />
                                <String fx:value="THREADING" />
                                <String fx:value="FOREX" />
                            </FXCollections>
                        </items>
                    </ComboBox>
                    <Label text="⬅ Valassz oldalt" textFill="WHITE">
                  <font>
                     <Font size="16.0" />
                  </font></Label>
                </HBox>
                <HBox fx:id="menuBarContainer" GridPane.columnIndex="1">

                </HBox>
                <!-- Minimize Button -->
                <Button onAction="#minimizeWindow" prefHeight="26.0" prefWidth="51.0" styleClass="windowButton" text="➖" GridPane.columnIndex="3" GridPane.halignment="CENTER" />

                <!-- Exit Button -->
                <Button onAction="#exitApplication" styleClass="windowButtonExit" text="✖" GridPane.columnIndex="4" GridPane.halignment="CENTER" />
            </children>
        </GridPane>
    </top>
    <center>
        <BorderPane fx:id="containerBorderPane">
            <Pane fx:id="centerPane">
                <VBox alignment="CENTER" spacing="10.0">
                    <Label alignment="CENTER" prefHeight="570.0" prefWidth="800.0" text="Udvozollek az alkalmazasban!" textFill="white">
                  <font>
                     <Font name="Hack Bold Italic" size="28.0" />
                  </font></Label>
                </VBox>
            </Pane>
        </BorderPane>
    </center>
</BorderPane>
